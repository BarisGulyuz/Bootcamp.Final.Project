@model ProductAddDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"></span> Ürün Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="validation-div" class="alert alert-danger">

                </div>
                <form asp-action="Add" id="product-add-form" enctype="multipart/form-data">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" id="validation-summary" aria-hidden="true" style="display:none">
                    </div>
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        <input id="product-name" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Ürün Açıklama</label>
                        <select id="product-category" class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
                    </div>
                    <div class="form-group">
                        <label>Ürün Görsel</label>
                        <input id="image-file" asp-for="Image" class="form-control p-1" type="file" />
                    </div>
                    <div class="form-group ml-4">
                        <input id="product-status" type="checkbox" asp-for="Status" class="form-check-input" />
                        <label class="form-check-label">Durum</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="category-close-btn" class="btn btn-danger w-100" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" id="btnSave" class="btn btn-success w-100"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
