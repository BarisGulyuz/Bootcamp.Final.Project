<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Teleperformance Admin | @ViewBag.Title</title>

    <!-- Custom fonts for this template-->
    <link href="~/admin01/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/admin01/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/admin01/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/MyToastr/toastr.css" rel="stylesheet" />
    <style>
        .spinner-center {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
            z-index: 1;
        }

        #suc-message-div {
            transition: all 500ms ease-in-out;
        }

        #err-message-div {
            transition: all 500ms ease-in-out;
        }
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">


        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Home/Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3"><small>Teleperformance Admin</small></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="index.html">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Genel Ayarlar
            </div>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Category">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Kategoriler</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Admin/Product">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Ürünler</span>
                </a>
            </li>
            <hr class="sidebar-divider">

        </ul>

        <div id="content-wrapper" class="d-flex flex-column">

            <div class="container-fluid">
                @if (TempData["SuccessMessage"] != null)
                {
    <div id="suc-message-div" class="alert alert-success mt-3" role="alert">
        <p class="text-center" id="suc-message">  @TempData["SuccessMessage"]</p>
    </div>}
                @if (TempData["ErrorMessage"] != null)
                {
    <div id="err-message-div" class="alert alert-danger mt-3" role="alert">
        <p class="text-center" id="err-message">  @TempData["ErrorMessage"]</p>
    </div>}
                @RenderBody()
            </div>

            @RenderBody()

            <footer style="margin-top:500px" class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Teleperformance @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>

        </div>


    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>




    <script src="~/admin01/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin01/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/admin01/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/admin01/js/sb-admin-2.min.js"></script>

    <script src="~/admin01/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin01/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script src="~/admin01/js/demo/datatables-demo.js"></script>
    <script src="~/MyToastr/toastr.js"></script>
    @*<script src="~/admin01/vendor/chart.js/Chart.min.js"></script>


        <script src="~/admin01/js/demo/chart-area-demo.js"></script>
        <script src="~/admin01/js/demo/chart-pie-demo.js"></script>*@
    @RenderSection("script", false)
    <script>
        $(document).ready(function () {
            const sucMessage = $('#suc-message').text().length
            if (sucMessage > 0) {
                $('#suc-message-div').fadeOut(3000)
            }
            const errMessage = $('#err-message').text().length
            if (errMessage > 0) {
                $('#err-message-div').fadeOut(3000)
            }
        })
    </script>

</body>

</html>
