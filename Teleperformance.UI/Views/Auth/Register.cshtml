@model Teleperformance.UI.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:100px; width:60%">
    <div class="card">
        <div class="card-header text-center">
            Kayıt Ol
        </div>
        <div class="card-body">
            <div class="alert alert-danger" asp-validation-summary="All">

            </div>
            <form asp-controller="Auth" asp-action="Register" method="post">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Kullanıcı Adı</span>
                    <input asp-for="UserName" type="text" class="form-control">
                    <span class="text-danger p-1 w-100" asp-validation-for="UserName"></span>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Mail</span>
                    <input asp-for="Email" type="text" class="form-control">
                    <span class="text-danger p-1 w-100" asp-validation-for="Email"></span>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Şifre</span>
                    <input id="password" asp-for="Password" type="text" class="form-control">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" id="btn-get-password" type="button">Şifre Öner</button>
                    </div>
                    <span class="text-danger  p-1  w-100" asp-validation-for="Password"></span>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Şifre Tekrar</span>
                    <input asp-for="PasswordAgain" type="text" class="form-control">
                    <span class="text-danger  p-1  w-100" asp-validation-for="PasswordAgain"></span>
                </div>
                <button class="btn btn-primary w-100 mb-2"> <i class="fas fa-user"></i> Kayıt Ol</button>
                <a href="/Auth/Login" class="btn btn-success w-100"> <i class="fa-solid fa-key"></i> Giriş Yap</a>
            </form>
        </div>
    </div>

</div>

@section script{
    <script>
        $('#btn-get-password').click(() => {
            console.log('calisti')
            $.get('/Auth/GetRandomPassword').done((password) => {
                $('#password').val(password)
            })
        })

        if ($('.alert>ul>li').css('display') === 'none') {
            $('.alert').hide()
        }
    </script>
}

