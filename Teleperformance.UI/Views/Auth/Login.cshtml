@model Teleperformance.UI.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:100px; width:60%">
    <div class="card">
        <div class="card-header text-center">
            Giriş Yap
        </div>
        <div class="card-body">

            <div class="alert alert-danger" asp-validation-summary="ModelOnly">

            </div>
            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Email</span>
                    <input asp-for="Email" type="text" class="form-control">
                    <span class="text-danger w-100" asp-validation-for="Email"></span>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Şifre</span>
                    <input asp-for="Password" type="text" class="form-control">
                    <span class="text-danger w-100" asp-validation-for="Password"></span>
                </div>
                <button class="btn btn-success w-100 mb-2"> <i class="fa-solid fa-key"></i> Giriş Yap</button>
                <a href="/Auth/Register" class="btn btn-primary w-100"> <i class="fas fa-user"></i> Kayıt Ol</a>
            </form>
        </div>
    </div>

</div>
